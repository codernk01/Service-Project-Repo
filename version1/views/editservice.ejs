<h2>Edit service provider profile</h2>

<form style="display:block" action="/provider/<%=id%>/<%=service._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label class="clg-lg-3" > 
                SERVICE TYPE:
        </label>
        <div class="clg-lg-8" >
            <input class="form-control" value="<%= service.type %>" name="updatedservice[type]">
        </div>
    </div>
    <div class="form-group">
        <label class="clg-lg-3" > 
                RELATED TO :
        </label>
        <div class="clg-lg-8" >
            <input class="form-control" value="<%= service.appliance %>" name="updatedservice[appliance]">
        </div>
    </div>
    <div class="form-group">
        <label class="clg-lg-3" > 
                DESCRIPTION:
        </label>
        <div class="clg-lg-8">
            <input class="form-control" value="<%= service.description %>" name="updatedservice[description]">
        </div>
    </div>
    <div class="form-group">
        <label class="clg-lg-3" > 
                PRICE:
        </label>
        <div class="clg-lg-8">
            <input class="form-control" value="<%= service.price %>" name="updatedservice[price]">
        </div>
    <button>SUBMIT</button>
</form>